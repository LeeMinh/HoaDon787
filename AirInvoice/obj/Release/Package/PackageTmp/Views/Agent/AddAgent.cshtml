@model AirlineInvoice.Models.Agent
@{
    ViewBag.Title = "THÊM MỚI ĐẠI LÝ";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div id="lblError" style="color: red; display: none;"></div>
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xs-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.Title</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("AddAgent", "Agent", FormMethod.Post, new { autocomplete = "off", @class = "form-horizontal" }))
                    {
 @Html.AntiForgeryToken()
 @Html.ValidationSummary(true)
       
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên đại lý</label>
                            <div class="col-sm-10">@Html.TextBoxFor(m => m.AgentName, new { @class = "form-control", id = "txtName", autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.AgentName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên công ty</label>
                            <div class="col-sm-10">@Html.TextBoxFor(m => m.AgentCompanyName, new { @class = "form-control", id = "txtComName", autocomplete = "off" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Địa chỉ</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(m => m.AgentCompanyAddress, new { @class = "form-control", id = "txtAddress" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mã số thuế</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.AgentTaxCode, new { @class = "form-control", id = "txtAgentTaxCode" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" title="Đăng nhập vào VNA">Signin sabre</label>
                            <div class="col-sm-10">@Html.TextBoxFor(m => m.SigninSabre, new { @class = "form-control", id = "txtSigninSabre" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" title="Mật khẩu đăng nhập vào VNA">Mật khẩu</label>
                            <div class="col-sm-10">@Html.PasswordFor(m => m.PasscodeSabre, new { @class = "form-control", id = "txtPasscodeSabre" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" title="">Mã vùng</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.SuffixSabre, new { @class = "form-control", id = "txtSuffixSabre" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Logo</label>
                          <div class="col-sm-10">
                                @Html.TextBox("avatar", string.Empty, new { @class = "form-control", id = "txtLogo", type = "file" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">
                                <label>@Html.CheckBoxFor(m => m.IsActive, new { @class = "i-checks" }) Hoạt động</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white" href="@Url.Action("Index")">Hủy</a>
                                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
