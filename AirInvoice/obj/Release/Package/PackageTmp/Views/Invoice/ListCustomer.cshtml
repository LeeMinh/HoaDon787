@{
    ViewBag.Title = "DANH SÁCH KHÁCH HÀNG THƯỜNG XUYÊN";
}
<script type="text/javascript">
    function Confirm(b) {
        ShowConfirmButton("Bạn có muốn loại khách hàng này không?", function () {
            var d = $(b).parent().find(".realDelete");
            window.location = $(d).attr("href");
          
        }, function () { return false; });
         return false;
    }
</script>
<div class="col-xs-12">
    <div class="box box-danger">
        <div class="box-header">
            <h3 class="box-title">@ViewBag.Title</h3>
            @Html.ActionLink("Thêm mới", "AddCustomer", null, new { @class = "btn btn-success pull-right" })
        </div>
        <div class="box-body">
            <div class="table-responsive">
                <!-- Table -->
                <table class="table table-striped table-bordered table-hover" id="tblPq">
                    <thead>
                        <tr>
                            <th>Tên khách hàng</th>
                            <th>Địa chỉ</th>
                            <th>Mã số thuế</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody id="tblUser">
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (AirlineInvoice.Models.Customers item in Model)
                            {
                                <tr>
                                    <td>@item.CustomerName</td>
                                    <td>@item.CustomerAddress</td>
                                    <td>@item.CustomerTax</td>
                                    <td>
                                        @Html.ActionLink(" ", "EditCustomer", new { id = item.CustomerID }, new { @class = "btnAction btnEdit" })
                                    </td>
                                    <td>
                                        <a class="btnAction btnDelete" onclick="Confirm(this);"></a>
                                        @Html.ActionLink(" ", "DeleteCustomer", new { id = item.CustomerID }, new { @class = "hidden realDelete btnAction btnDelete" })
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">Không có dữ liệu</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
