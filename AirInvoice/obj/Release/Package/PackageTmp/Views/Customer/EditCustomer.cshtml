@model AirlineInvoice.Models.Customer
@{
    ViewBag.Title = "SỬA THÔNG TIN KHÁCH HÀNG";
}
<script type="text/javascript">
    $(function () {
        $('#txtBirthDay').datetimepicker({
            mask: true,
            timepicker: false,
            format: 'Y-m-d'
        });
        $('#txtBirthDay').val('@Model.BirthDay.ToString("yyyy-MM-dd")');
    });
</script>
<div class="wrapper wrapper-content animated fadeInRight">
    <div id="lblError" style="color: red; display: none;"></div>
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xs-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.Title</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("EditCustomer", "Customer", FormMethod.Post, new { autocomplete = "off", @class = "form-horizontal" }))
                    {
 @Html.AntiForgeryToken()
 @Html.ValidationSummary(true)
       @Html.HiddenFor(x => x.CustomerID)
                        <div class="form-group">
                            <label class="col-sm-2 control-label" title="Chứng mình thư nhân dân">CMTND</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.IdentityNumber, new { @class = "form-control", id = "txtIdentity" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Họ tên</label>
                            <div class="col-sm-10">@Html.TextBoxFor(m => m.FullName, new { @class = "form-control", id = "txtName", autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.FullName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" title="Ngày sinh">Ngày sinh</label>
                            <div class="col-sm-10">@Html.TextBoxFor(m => m.BirthDay, "yyyy-MM-dd", new { @class = "form-control", id = "txtBirthDay" })
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="col-sm-2 control-label" title="Ngày sinh">Giới tính</label>
                            <div class="col-sm-10">@Html.DropDownListFor(m => m.Gender, AirlineInvoice.Utils.DataComboSource.Gender(), new { @class = "form-control", id = "txtBirthDay" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" title="Ngày sinh">Phân loại</label>
                            <div class="col-sm-10">@Html.DropDownListFor(m => m.CustomerType, AirlineInvoice.Utils.DataComboSource.CustomerType(), new { @class = "form-control", id = "txtBirthDay" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" title="Số điện thoại">Điện thoại</label>
                            <div class="col-sm-10">@Html.TextBoxFor(m => m.Phone, new { @class = "form-control", id = "txtPhone" })
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">
                                <label>@Html.CheckBoxFor(m => m.IsForeigner, new { @class = "i-checks" }) Khách hàng quen thuộc</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ghi chú</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", id = "txtDescription" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white" href="@Url.Action("Index")">Hủy</a>
                                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
