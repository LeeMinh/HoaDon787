<script type="text/javascript">
    function top_search_keypress(event) {
        if (event.keyCode == 13) {
            var url = '@Url.Action("SearchInvoice", "Invoice", new { SearchText = "aaa" })';
            url = url.replace("aaa", $("#top-search").val());
            window.location = url;
        }
    }
    $(document).ready(function () {
        $('#imgAvatar').error(function () {
            $('#imgAvatar').attr("src", pathCombine(baseUrl, "/images/no-avatar.png"));
        });
    });
</script>

<header class="main-header">
