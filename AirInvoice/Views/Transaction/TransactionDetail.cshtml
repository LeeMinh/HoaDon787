@{
    Layout = null;
}
@model AirlineInvoice.Models.TransactionModel
<script src="~/Scripts/jquery-2.1.4.js"></script>
<script src="~/Scripts/jquery-ui-1.10.4.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/CommonFunction.js"></script>

<link href="~/Content/bootstrap.min.css" rel="stylesheet">
<link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">
<link href="~/Content/plugins/iCheck/custom.css" rel="stylesheet">
<link href="~/Content/animate.css" rel="stylesheet">
<link href="~/Content/style.css" rel="stylesheet">

<link rel="stylesheet" href="~/Content/style.css" type="text/css" />

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Thông tin giao dịch</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <div class="form-group">
                                <label class="col-sm-4">Giờ bắt đầu</label>
                                <div class="col-sm-8">
                                    <span>@string.Format("{0:yyyy/MM/dd HH:mm}", Model.Transaction.StartTime)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4">Khách hàng</label>
                                <div class="col-sm-8">
                                    <span>@Model.Transaction.CustomerName</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4">Phân loại</label>
                                <div class="col-sm-8">
                                    <span>@AirlineInvoice.Utils.DataComboSource.CustomerTypeMapping[Model.Transaction.CustomerType]</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4">CMTND</label>
                                <div class="col-sm-8">
                                    <span>@Model.Transaction.IdentityNumber</span>
                                </div>
                            </div>
                            
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4">Giờ kết thúc</label>
                                <div class="col-sm-8">
                                    <span>@string.Format("{0:yyyy/MM/dd HH:mm}", Model.Transaction.EndTime)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4">Điện thoại</label>
                                <div class="col-sm-8">
                                    <span>@Model.Transaction.Phone</span>
                                </div>
                            </div>
                           <div class="form-group">
                                <label class="col-sm-4">Tổng tiền</label>
                                <div class="col-sm-8">
                                    <span>@string.Format("{0:#,0.#}", Model.Transaction.TotalAmount)&nbsp;@Model.Transaction.CurrencyCode</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4">Trạng thái thanh toán</label>
                                <div class="col-sm-8">
                                    <span>@AirlineInvoice.Utils.DataComboSource.TransactionStatusMapping[Model.Transaction.Status]</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/scripts/plugins/metisMenu/jquery.metisMenu.js"></script>
<script src="js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

<!-- Custom and plugin javascript -->
<script src="~/Scripts/inspinia.js"></script>
<script src="~/Scripts/plugins/pace/pace.min.js"></script>

<!-- iCheck -->
<script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
<script>
    $(document).ready(function () {
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });
    });
</script>
